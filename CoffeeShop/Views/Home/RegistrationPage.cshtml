@model RegistrationViewModel

@{
    ViewData["Title"] = "RegistrationPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>RegistrationPage</h1>

<form asp-controller="Home" asp-action="Registered" class="col-xl-4 col-lg-5 col-md-6 col-sm-8 col-12" onsubmit="return ValidateForm()">
    <div asp-validation-summary="ModelOnly">
        <span>Please correct the following errors</span>
    </div>  
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" type="text" class="form-control" id="Name" name="Name" required />
        <span asp-validation-for="Name" class="alert-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" type="text" class="form-control" id="Email" name="Email" required />
        <span asp-validation-for="Email" class="alert-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmEmail"></label>
        <input asp-for="ConfirmEmail" type="text" class="form-control" id="confirmEmail" name="ConfirmEmail" required />
        <span asp-validation-for="ConfirmEmail" class="alert-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" type="text" class="form-control" id="Password" name="Password" required />
        <span asp-validation-for="Password" class="alert-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" type="text" class="form-control" id="confirmPassword" name="ConfirmPassword" required />
        <span asp-validation-for="ConfirmPassword" class="alert-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Phone"></label>
        <input asp-for="Phone" type="text" class="form-control" id="Phone" name="Phone" />
        <span asp-validation-for="Phone" class="alert-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" class="form-control btn btn-primary col-xl-3 col-lg-3 col-md-3 col-sm-3 col-12" />
    </div>
</form>


